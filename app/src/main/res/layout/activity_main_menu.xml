<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/composeB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compose new"
        app:layout_constraintTop_toBottomOf="@+id/sentB1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/receivedB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="View received"
        app:layout_constraintTop_toBottomOf="@+id/sentB1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notificationsB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Notifications"
        app:layout_constraintTop_toBottomOf="@+id/sentB1"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/sentB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sent items"
        app:layout_constraintTop_toBottomOf="@+id/loginB2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/loginB2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unreadCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Unread count:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationsB1" />

    <TextView
        android:id="@+id/unreadCountNumberLabel"
        android:layout_width="89dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:text="123"
        app:layout_constraintStart_toEndOf="@+id/unreadCountLabel"
        app:layout_constraintTop_toTopOf="@+id/unreadCountLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>