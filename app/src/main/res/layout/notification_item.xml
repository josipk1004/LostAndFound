<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView android:id="@+id/title" style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"/>
    <TextView android:id="@+id/subject" style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"/>
    <TextView android:id="@+id/name" style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>